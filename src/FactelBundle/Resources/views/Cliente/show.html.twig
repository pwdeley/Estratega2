{% extends "FactelBundle::Layout.html.twig" %}
{% block panel_title %}
<i class="fa fa-bar-chart-o fa-fw"></i>{{entity.nombre}}
<div class="pull-right">
    <div class="btn-group">
        <button class="btn btn-info btn-xs dropdown-toggle"
                type="button" data-toggle="dropdown">
            <i class="fa fa-list"></i>
            Acciones <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right" role="menu">
            <li><a href="{{ path('cliente_new') }}"><i class="fa fa-plus-circle"></i> Nuevo</a></li>
            <li><a href="{{ path('cliente_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o"></i> Editar</a></li>
            <li><a href="{{ path('cliente') }}"><i class="fa fa-undo"></i> Clientes</a></li>
            <li class="divider"></li>
            <li><a class="accion" href="" data-toggle="modal" data-target="#confirm-delete" type="button" accion = "delete"><i class="glyphicon glyphicon-trash icon-white"></i> Eliminar</a></li>
        </ul>
    </div>

</div>
{% endblock %}
{% block content %}
<table class="table">
    <tbody>
        <tr>
            <th>Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
        <tr>
            <th>Tipo Identificaci&oacute;n</th>
            <td>{{ entity.tipoIdentificacion }}</td>
        </tr>
        <tr>
            <th>Identificaci&oacute;n</th>
            <td>{{ entity.identificacion }}</td>
        </tr>
        <tr>
            <th>Direcci&oacute;n</th>
            <td>{{ entity.direccion }}</td>
        </tr>
        <tr>
            <th>Celular</th>
            <td>{{ entity.celular }}</td>
        </tr>
        <tr>
            <th>Correo Electr&oacute;nico</th>
            <td>{{ entity.correoElectronico }}</td>
        </tr>
    </tbody>
</table>
{{ form(delete_form) }}
{% endblock %}
